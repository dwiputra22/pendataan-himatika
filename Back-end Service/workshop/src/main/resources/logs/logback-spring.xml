<configuration>
    <!-- Penyimpanan log pada direktori logs di dalam folder resources -->
    <property name="LOG_PATH" value="logs" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n" />

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_PATH}/pendataan.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Level log yang diizinkan, misalnya ALL, DEBUG, INFO, WARN, ERROR -->
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>
